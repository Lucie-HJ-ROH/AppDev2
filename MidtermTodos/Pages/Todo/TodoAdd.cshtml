@page
@model MidtermTodos.Pages.Todo.TodoAdd


@{
    ViewData["Title"] = "Add Todo";
}

<h1>Create new todo</h1>
<div class="mt-3">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Task" class="col-sm-2 col-form-label">Task</label>
            <div class="col-sm-10">
                <input asp-for="Task" class="form-control"/>
                <span asp-validation-for="Task"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DueDate" class="col-sm-2 col-form-label">DueDate</label>
            <div class="col-sm-10">
                <input type="date" asp-for="DueDate" class="form-control" min = "2000-01-01" max="2099-12-31"/>
                <span asp-validation-for="DueDate"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="IsDone" class="col-sm-2 col-form-label">IsDone?</label>
            <div class="col-sm-10">
                <label><input asp-for="IsDone" type="checkbox"/>@Html.DisplayNameFor(m => m.IsDone)</label>
                @* <input type="radio" checked="false" asp-for="IsDone" class="form-control"/> *@
                <span asp-validation-for="IsDone"></span>
            </div>
        </div>
        <p>
            <button class="btn btn-primary">Add Todo</button>
        </p>
    </form>
</div>