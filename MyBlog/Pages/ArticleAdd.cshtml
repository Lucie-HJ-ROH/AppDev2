@page
@model MyBlog.Pages.ArticleAdd


@{
    ViewData["Title"] = "Add Article";
}

<h1>Create new article</h1>
<div class="mt-3">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Title" class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Upload" class="col-sm-2 col-form-label">Image</label>
            <div class="col-sm-10">
                <input asp-for="Upload" class="form-control" rows="5"></input>
                <span asp-validation-for="Upload"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Body" class="col-sm-2 col-form-label">Content</label>
            <div class="col-sm-10">
                <textarea asp-for="Body" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Body"></span>
            </div>
        </div>
        <p>
            <button class="btn btn-primary">Add Article</button>
        </p>
    </form>
</div>