@page
@using Microsoft.IdentityModel.Tokens
@model MyBlog.Pages.Admin.Articles.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr/>
    <dl class="row">
        @if (!Model.Article.ImagePath.IsNullOrEmpty())
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Article.ImagePath)
            </dt>
            <dd class="col-sm-10">
                <img src="/@Model.Article.ImagePath" height="50"/>
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Body)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Body)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Author.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Author.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Created)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Article?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>